<div class="main">
     <form action="postDisciplin" method="POST">
          <label>Discipline:</label><br>
        <select  name="id">
    {{#each discipline}}
    <option value={{this._id}}>{{this.name}}</option>
    {{/each}}
  </select><br>
        <label>Name:</label><br>
        <input name="name"  ><br><br>
        <label>Img:</label><br>
        <input name="img" ><br><br>
        <input type="submit" value="submit" />  
    {{#if errors}}
       {{#each errors}}
       <p style="color: white;">{{this.msg}}</p>
       {{/each}}
    {{/if}}
     </form>
</div>